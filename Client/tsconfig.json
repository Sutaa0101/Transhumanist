{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noEmitOnError": true
    },
    "include": [
        "../Client/**/*",
        "../Share/**/*"
    ],
    "exclude": [
        "../Server"
    ]
}
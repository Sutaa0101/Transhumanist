{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": true,
        "outDir": "../dist",
        // "rootDir": "../Server",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noEmitOnError": true
    },
    "include": [
        "../Server/**/*",
        "../Share/**/*"
    ],
    "exclude": [
        "../node_modules",
        "../Client"
    ]
}